{
    "name": "codica-studio/messenger",
    "description": "A random Codica Studio package.",

    "homepage": "https://github.com/codica-studio/messenger",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael J Brown",
            "email": "mbrown@codicastudio.com",
            "homepage": "https://codicastudio.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "illuminate/config": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/database": "^8.0"
    },
    "require-dev": {
        "adamwathan/faktory": "^0.3.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Cmgmyr\\Messenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cmgmyr\\Messenger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html build/coverage",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cmgmyr\\Messenger\\MessengerServiceProvider"
            ]
        }
    }
}
